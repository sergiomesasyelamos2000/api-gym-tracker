# Server
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://your-frontend-domain.com
CORS_ORIGINS=https://your-frontend-domain.com

# Database (Railway Postgres usually provides DATABASE_URL)
DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_SSL=true
DATABASE_POOL_MAX=10
DATABASE_POOL_MIN=0

# Required auth/security
JWT_SECRET=replace-with-a-strong-secret
JWT_EXPIRATION=7d

# Required for private dependency install in Railway build
NODE_AUTH_TOKEN=github_pat_xxx

# Stripe (required by SubscriptionModule at startup)
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_MONTHLY_PRICE_ID=price_xxx
STRIPE_YEARLY_PRICE_ID=price_xxx
STRIPE_LIFETIME_PRICE_ID=price_xxx

# Email (required in production for password reset emails)
BREVO_API_KEY=xkeysib-xxx
BREVO_FROM_EMAIL=no-reply@your-domain.com
BREVO_FROM_NAME=EvoFit App

# OAuth / Social login (optional, depending on enabled flows)
GOOGLE_CLIENT_ID_WEB=
GOOGLE_CLIENT_ID_IOS=
GOOGLE_CLIENT_ID_ANDROID=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# Cloudinary (optional unless image upload is used)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# AI providers (optional)
GEMINI_API_KEY=
GROQ_API_KEY=
LOGMEAL_API_KEY=
RAPIDAPI_KEY=

# Nutrition providers (optional)
NUTRITION_PROVIDER_OVERLAY_ENABLED=false
NUTRITION_PROVIDER_OVERLAY_TTL_MS=300000
NUTRITIONIX_APP_ID=
NUTRITIONIX_APP_KEY=
EDAMAM_APP_ID=
EDAMAM_APP_KEY=
FATSECRET_CLIENT_ID=
FATSECRET_CLIENT_SECRET=
USDA_API_KEY=

# Google Cloud Translate (optional)
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=
